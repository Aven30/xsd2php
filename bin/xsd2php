#!/usr/bin/env php
<?php
$paths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
];
foreach ($paths as $path) {
    if (is_file($path)) {
        include $path;
        break;
    }
}

use GoetasWebservices\Xsd\XsdToPhp\Command\Convert;
use Symfony\Component\Console\Application;

$container = new \Symfony\Component\DependencyInjection\ContainerBuilder();
$loader = new \Symfony\Component\DependencyInjection\Loader\XmlFileLoader($container, new \Symfony\Component\Config\FileLocator(__DIR__ . '/../src/Resources/config'));
$loader->load('services.xml');

error_reporting(error_reporting() & ~E_NOTICE);
$cli = new Application('Convert XSD to PHP classes Command Line Interface', "2.0");
$cli->setCatchExceptions(true);
$cli->addCommands(array(
    new Convert($container)
));
$cli->run();
